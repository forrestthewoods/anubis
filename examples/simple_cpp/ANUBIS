cpp_binary(
    name = "simple_cpp",
    srcs = [ "main.cpp" ],
    srcs2 = glob([
        "*.cpp",
        "*.h",
        "src/**/*.cpp",
    ]),
    srcs3 = select(
        (platform, arch) => {
            (windows, x64) = ["foo", "foofoo"],
            (linux | macos, _) = ["bar"],
            default = ["baz"],
        }
    ),
    srcs4 = ["foo"] + ["bar"] + select(
        (platform) => {
            default = ["baz"]
        })
)

butts(
    name = "teehee",
)
