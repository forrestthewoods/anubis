{
    "comments": {
        "lineComment": "#"
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"", "notIn": ["string"] }
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*[a-zA-Z_][a-zA-Z0-9_]*\\s*\\(",
            "end": "^\\s*\\)"
        }
    },
    "indentationRules": {
        "increaseIndentPattern": "^.*[\\(\\[\\{]\\s*$",
        "decreaseIndentPattern": "^\\s*[\\)\\]\\}]"
    }
}
